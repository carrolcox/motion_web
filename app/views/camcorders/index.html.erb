<%- model_class = Camcorder.new.class -%>
<div class="page-header">
  <h1><%= image_tag('camera128.png') %> Список камер</h1>
</div>
<table class="table table-bordered table-condensed table-hover">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:thread) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @camcorders.each do |cam| %>
      <tr>
        <td><%= link_to cam.id, cam %></td>
        <td><%= link_to cam.thread, cam %></td>
        <td><%= link_to cam.name, cam %></td>
        <td><%= cam.description %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_camcorder_path(cam), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      camcorder_path(cam),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Вы уверены?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br />
<%= link_to t('Добавить камеру'),
            new_camcorder_path,
            :class => 'btn btn-primary' %>